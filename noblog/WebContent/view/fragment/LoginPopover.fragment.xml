<core:FragmentDefinition
	xmlns			= "sap.m"
	xmlns:l			= "sap.ui.layout"
	xmlns:f			= "sap.ui.layout.form"
	xmlns:core		= "sap.ui.core">
	<Popover
		showHeader			= "false"
		contentWidth		= "24rem"
		contentHeight		= "18rem"
		horizontalScolling	= "false"
		verticalScrolling	= "false"
		placement			= "Bottom">
		<NavContainer>
			<Page enableScrolling="false" title="Login">
				<l:VerticalLayout width="100%" height="100%" class="sapUiContentPadding">
					<Label text="Username"/>
					<Input width="100%" value="{login>username}"/>
					<Label text="Password"/>
					<Input width="100%" value="{login>password}" type="Password" class="sapUiMarginBottom" />
					<Button width="100%" type="Accept" text="Login" press="handleButtonLoginPressed"/>
					<Link text="New here? Register now!" press="handleButtonRegisterPressed" />
				</l:VerticalLayout>
			</Page>
			<Page>
				<l:VerticalLayout width="100%" height="100%" class="sapUiContentPadding">
					<Label text="Your username"/>
					<Input width="100%"/>
					<Label text="Your password"/>
					<Input width="100%" class="sapUiMarginBottom"/>
					<Button width="100%" type="Reject" text="Register"/>
				</l:VerticalLayout>
			</Page>
		</NavContainer>
	</Popover>
</core:FragmentDefinition>

