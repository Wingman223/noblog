<core:FragmentDefinition
	xmlns			= "sap.m"
	xmlns:l			= "sap.ui.layout"
	xmlns:f			= "sap.ui.layout.form"
	xmlns:core		= "sap.ui.core">
	<Dialog>
		<content>
			<l:VerticalLayout width="100%" height="100%" class="sapUiContentPadding">
				<Label required="true" text="Title"/>
				<Input width="100%" value="{createblogdialog>/title}"/>
			</l:VerticalLayout>
		</content>
		<beginButton>
			<Button text="Ok" width="100%" press="handleCreateBlogDialogButtonCreatePressed"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" width="100%" press="handleCreateBlogDialogButtonCancelPressed"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>