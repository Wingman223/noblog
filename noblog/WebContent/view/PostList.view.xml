<mvc:View controllerName="view.PostList"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:control="control"
	xmlns:h="http://www.w3.org/1999/xhtml">
	<Page
		id="page"
		title="{CategoryName}"
		showNavButton="true"
		navButtonPress="handleNavButtonPress"
		showFooter="{device>/isNoPhone}" >
		<headerContent>
			<Button
				icon="sap-icon://cart"
				tooltip="{i18n>TO_CART_BUTTON_TOOLTIP}"
				press="handleCartButtonPress">
			</Button>
		</headerContent>
		<footer>
			<Toolbar>
			</Toolbar>
		</footer>
		<content>
			<List headerText="{i18n>HOME_CATEGORY_LIST_HEADER}"
				mode="None"
				items="{
					model: 'blogs',
					path : '/rows',
					sorter : {
						model		: 'blogs',
						path 		: 'id',
						descending	: false
					}
				}">
				<items>
					<StandardListItem
						title="{blogs>value/name}"
						type="Active"
						press="handleCategoryListItemPress" >
					</StandardListItem>
				</items>
			</List>
		</content>
	</Page>
</mvc:View>
