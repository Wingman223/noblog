<mvc:View controllerName="view.master.PostList"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:control="control"
	xmlns:h="http://www.w3.org/1999/xhtml">
	<Page
		title			= "{postModel>/title}"
		showNavButton	= "true"
		navButtonPress	= "handleNavButtonBackPress"
		showFooter		= "{device>/isNoPhone}" >
		<subHeader>
			<Toolbar>
				<SearchField
					id					= "id_view_postlist_input_search"
					showRefreshButton	= "false"
					placeholder			= "{i18n>SEARCH_FIELD_PLACEHOLDER}"
					search				= "handleSearch"
					tooltip				= "{i18n>VIEW_POSTLIST_SEARCHFIELD_TOOLTIP}"
					width				= "100%">
				</SearchField>
			</Toolbar>
		</subHeader>
		<footer>
			<Toolbar>
			</Toolbar>
		</footer>
		<content>
			<List
				id		= "id_view_postlist_list_posts"
				mode	= "None"
				items	= "{
					model	: 'postModel',
					path 	: '/posts',
					sorter 	: {
						model		: 'postModel',
						path 		: 'id',
						descending	: false
					}
				}">
				<items>
					<StandardListItem
						title	= "{postModel>title}"
						type	= "Active"
						press	= "handlePostListViewListItemPostsPressed" >
					</StandardListItem>
				</items>
			</List>
		</content>
	</Page>
</mvc:View>
