<mvc:View controllerName="view.master.PostList"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:control="control"
	xmlns:h="http://www.w3.org/1999/xhtml">
	<Page
		title			= "{postModel>/title}"
		showNavButton	= "true"
		navButtonPress	= "handleNavButtonBackPress"
		showFooter		= "{device>/isNoPhone}" >
		<headerContent>
			<!--
			<Button
				icon	= "sap-icon://cart"
				tooltip	= "{i18n>TO_CART_BUTTON_TOOLTIP}"
				press	= "handleCartButtonPress">
			</Button>
			-->
		</headerContent>
		<footer>
			<Toolbar>
			</Toolbar>
		</footer>
		<content>
			<List
				mode	= "None"
				items	= "{
					model	: 'postModel',
					path 	: '/posts',
					sorter 	: {
						model		: 'postModel',
						path 		: 'id',
						descending	: false
					}
				}">
				<items>
					<StandardListItem
						title	= "{postModel>title}"
						type	= "Active"
						press	= "handlePostListViewListItemPostsPressed" >
					</StandardListItem>
				</items>
			</List>
		</content>
	</Page>
</mvc:View>
