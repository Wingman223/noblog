<mvc:View
	controllerName="view.detail.RecentBlogPosts"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" >
	<Page
		title="{i18n>WELCOME_TITLE}"
		enableScrolling="true"
		content="{rows}">
		<headerContent>
			<Button
				icon	= "sap-icon://key"
				tooltip	= "Log In / Register"
				press	= "handleButtonLogInPress" >
			</Button>
		</headerContent>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button
					icon	= "sap-icon://add"
					text	= "Create Blog"
					press	= "handleButtonCreateBlogPress" >
				</Button>
			</Toolbar>
		</footer>
		<content>
			<Panel headerText="{value/title}">
				<content>
					<Image
						src="{value/pictureUrl}"
						visible="{=${value/pictureUrl} ? true : false}"
						width="250px"
					>
					</Image>
					<Text
						text="{value/content}">
					</Text>
				</content>
			</Panel>
		</content>
	</Page>
</mvc:View>