<mvc:View
	controllerName="view.detail.BlogPosts"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" >
	<Page
		title="{i18n>WELCOME_TITLE}"
		enableScrolling="true"
		content="{global_blog_model>/posts}">
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button
					icon	= "sap-icon://add"
					text	= "Add Post"
					press	= "handleButtonCreateBlogPress" >
				</Button>
			</Toolbar>
		</footer>
		<content>
			<Panel headerText="{global_blog_model>title}">
				<content>
					<Image
						src="{global_blog_model>pictureUrl}"
						visible="{=${global_blog_model>pictureUrl} ? true : false}"
						width="250px"
					>
					</Image>
					<Text
						text="{global_blog_model>content}">
					</Text>
				</content>
			</Panel>
		</content>
	</Page>
</mvc:View>