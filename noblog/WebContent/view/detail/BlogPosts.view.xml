<mvc:View
	controllerName="view.detail.BlogAndPost"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" >
	<Page
		title="{i18n>WELCOME_TITLE}"
		enableScrolling="true"
		content="{postModel>/posts}">
		<footer>
			<Toolbar>
			</Toolbar>
		</footer>
		<content>
			<Panel headerText="{postModel>title}">
				<content>
					<Image
						src="{postModel>pictureUrl}"
						visible="{=${postModel>pictureUrl} ? true : false}"
						width="250px"
					>
					</Image>
					<Text
						text="{postModel>content}">
					</Text>
				</content>
			</Panel>
		</content>
	</Page>
</mvc:View>